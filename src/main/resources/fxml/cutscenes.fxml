<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="cutscenePane" prefHeight="690.0" prefWidth="1100.0"
  xmlns="http://javafx.com/javafx/22"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.CutsceneController">
  <children>
    <ImageView fitHeight="745.0" fitWidth="1245.0" layoutX="-74.0" layoutY="-8.0" pickOnBounds="true" preserveRatio="true">
      <image>
        <Image url="@../images/CutSceneBackground.png" />
      </image>
    </ImageView>
    <!-- Alice's Image -->
    <ImageView fx:id="aliceImage" fitHeight="541.0" fitWidth="542.0" layoutX="273.0" layoutY="102.0" pickOnBounds="true" preserveRatio="true">
      <image>
        <Image url="@../images/Alice-Wave.png" />
      </image>
    </ImageView>
    <HBox layoutX="123.0" layoutY="359.0" prefHeight="241.0" prefWidth="883.0" style="-fx-background-image: url('/images/nav_bar_background.png'); -fx-background-size: cover; -fx-background-position: center center; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;">
      <children>
        <!-- Dialogue Text -->
        <Label fx:id="dialogueText" prefHeight="243.0" prefWidth="889.0" textFill="WHITE" wrapText="true">
          <font>
            <Font size="18.0" />
          </font>
        </Label>
      </children>
    </HBox>

    <!-- Next Button -->
    <Button fx:id="btnNext" layoutX="724.0" layoutY="262.0" onAction="#onNextDialogue" prefHeight="50.0" prefWidth="150.0" stylesheets="@../css/styles.css" text="Next" />

    <!-- Skip Button -->
    <Button fx:id="btnSkip" layoutX="885.0" layoutY="41.0" onAction="#onSkipCutscene" prefHeight="50.0" prefWidth="150.0" stylesheets="@../css/styles.css" text="Skip" />
  </children>
</Pane>
