   <children>
      <Pane prefHeight="71.0" prefWidth="749.0">
         <children>
            <Label layoutX="160.0" layoutY="18.0" text="Why and who do you think is the thief">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Label>
            <Label fx:id="secs" alignment="CENTER" contentDisplay="CENTER" layoutX="55.0" layoutY="2.0" prefHeight="69.0" prefWidth="58.0" text="00">
               <font>
                  <Font size="45.0" />
               </font>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="26.0" layoutY="3.0" prefHeight="56.0" prefWidth="58.0" text=":">
               <font>
                  <Font size="45.0" />
               </font>
            </Label>
            <Label fx:id="mins" alignment="CENTER" contentDisplay="CENTER" layoutX="8.0" layoutY="1.0" prefHeight="69.0" prefWidth="58.0" text="2">
               <font>
                  <Font size="45.0" />
               </font>
            </Label>
         </children>
      </Pane>
