            <Font name="Arial Black" size="18.0" />
         </font>
      </TextArea>
      <Button fx:id="submitButton" mnemonicParsing="false" onAction="#sendAnswer" prefHeight="66.0" prefWidth="302.0" text="Submit">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font></Button>
   </children>
