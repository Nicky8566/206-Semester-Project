<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="599.0" prefWidth="789.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.SubmitAnswerController">
   <children>
      <Label text="Why and who do you think is the thief">
         <font>
            <Font size="24.0" />
         </font></Label>
      <TextArea fx:id="answerTxtArea" prefHeight="227.0" prefWidth="749.0" promptText="Record your response here">
         <font>
            <Font name="Arial Black" size="18.0" />
         </font>
      </TextArea>
      <Button fx:id="submitButton" mnemonicParsing="false" onAction="#sendAnswer" prefHeight="66.0" prefWidth="302.0" text="Submit" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <effect>
      <Glow />
   </effect>
   <cursor>
      <Cursor fx:constant="N_RESIZE" />
   </cursor>
</VBox>
